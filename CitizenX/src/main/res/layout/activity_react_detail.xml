<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.miti.citizenx.ReactDetail"
                android:background="@color/main_background">

    <include
            android:id="@+id/toolbar"
            layout="@layout/t_tool_bar"
            />
	<ScrollView
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:layout_below="@+id/toolbar"
		   android:layout_alignLeft="@+id/toolbar"
		   android:layout_alignStart="@+id/toolbar"
			>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginRight="@dimen/margin_5"
				android:layout_marginLeft="@dimen/margin_5"
				android:layout_marginTop="@dimen/margin_5"
				>

			<include layout="@layout/t_card"
			         android:background="@drawable/back_cards" />

			<LinearLayout
					android:layout_marginTop="@dimen/margin_5"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:padding="@dimen/card_padding"
					android:id="@+id/attachments"
					android:background="@drawable/back_cards" >
				<TextView
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/attachments_title"
						android:textColor="#000"
						android:gravity="center_vertical"
						android:padding="2dp"
						android:text="@string/attachments"
						android:textSize="18sp"/>
				<include
						android:id="@+id/comments_divider"
						layout="@layout/t_divider"
						/>
			</LinearLayout>
			<LinearLayout
					android:layout_marginTop="@dimen/margin_5"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:orientation="vertical"
					android:padding="@dimen/card_padding"
					android:id="@+id/comments"
					android:background="@color/card_background" >
				<TextView
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/comments_title"
						android:textColor="#000"
						android:gravity="center_vertical"
						android:padding="2dp"
						android:textSize="18sp"
						android:text="@string/comments"/>
				<include
						android:id="@+id/comments_divider"
						layout="@layout/t_divider"
						/>

			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</RelativeLayout>
